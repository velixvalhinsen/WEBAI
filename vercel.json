{
  "buildCommand": "VITE_BASE_PATH=/ npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "functions": {
    "api/chat.ts": {
      "maxDuration": 60
    },
    "api/test.ts": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/chat",
      "destination": "/api/chat.ts"
    },
    {
      "source": "/api/test",
      "destination": "/api/test.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}

