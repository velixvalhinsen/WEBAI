{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "../node_modules/@types"]
  },
  "include": ["*.ts"],
  "exclude": ["node_modules"]
}

